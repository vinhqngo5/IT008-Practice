<Window x:Class="QuanLyKho.ObjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyKho"
        mc:Ignorable="d"
        Title="Vật tư"
        Height="500"
        Width="1000"
        xmlns:uc="clr-namespace:QuanLyKho.UserControlLesor"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        DataContext="{StaticResource MainVM}"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        x:Name="window">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="auto"></RowDefinition>
      <RowDefinition></RowDefinition>
    </Grid.RowDefinitions>
    <Grid Grid.Row="0">
      <uc:ControlBarUC Tag="{Binding Title, ElementName=window}"></uc:ControlBarUC>
    </Grid>
    <Grid Grid.Row="1">
      <Grid.RowDefinitions>
        <RowDefinition Height="auto"></RowDefinition>
        <RowDefinition Height="auto"></RowDefinition>
        <RowDefinition Height="auto"></RowDefinition>
      </Grid.RowDefinitions>
      <!--Các element binding từ selected item-->
      <materialDesign:Card Grid.Row="0"
                           Margin="5">
        <WrapPanel Margin="0 0 0 10">
          <TextBox materialDesign:HintAssist.Hint="Tên vật tư"
                   Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                   Margin="5 5 15 5"
                   Text="{Binding DisplayName, UpdateSourceTrigger=PropertyChanged}" />
          <ComboBox materialDesign:HintAssist.Hint="Đơn vị đo"
                    materialDesign:HintAssist.HintOpacity=".65"
                    IsEditable="True"
                    VerticalAlignment="Center"
                    Margin="5 5 15 -7"
                    ItemsSource="{Binding Unit}"
                    SelectedItem="{Binding SelectedUnit, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
          </ComboBox>
          <ComboBox materialDesign:HintAssist.Hint="Nhà cung cấp"
                    materialDesign:HintAssist.HintOpacity=".65"
                    IsEditable="True"
                    VerticalAlignment="Center"
                    Margin="5 5 15 -7"
                    ItemsSource="{Binding Supplier}"
                    SelectedItem="{Binding SelectedUnit, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
          </ComboBox>
          <TextBox materialDesign:HintAssist.Hint="QR Code"
                   Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                   VerticalAlignment="Center"
                   Margin="5 5 15 5"
                   Text="{Binding QRCode, UpdateSourceTrigger=PropertyChanged}"
                   Width="150" />
          <TextBox materialDesign:HintAssist.Hint="Bar Code"
                   Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                   VerticalAlignment="Center"
                   Margin="5 5 15 5"
                   Text="{Binding BarCode, UpdateSourceTrigger=PropertyChanged}" />
        </WrapPanel>
      </materialDesign:Card>
      <!--Các button-->
      <materialDesign:Card Grid.Row="1"
                           Margin="5">
        <WrapPanel>
          <Button Content="Thêm"
                  Margin="5"
                  Width="100"
                  Command="{Binding AddCommand}"></Button>
          <Button Content="Sửa"
                  Margin="5"
                  Width="100"
                  Command="{Binding EditCommand}"></Button>
          <Button Content="Xóa"
                  Margin="5"
                  Width="100"
                  Command="{Binding DeleteCommand}"></Button>
        </WrapPanel>
      </materialDesign:Card>
      <!--List item-->
      <materialDesign:Card Grid.Row="2"
                           VerticalAlignment="Stretch"
                           Margin="5">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
          <ListView ItemsSource="{Binding List}"
                    SelectedItem="{Binding SelectedItem, Mode=OneWayToSource}">
            <ListView.View>
              <GridView>
                <GridViewColumn Header="ID"
                                DisplayMemberBinding="{Binding Id}" />
                <GridViewColumn Header="Tên vật tư"
                                DisplayMemberBinding="{Binding DisplayName}" />
                <GridViewColumn Header="Đơn vị đo"
                                DisplayMemberBinding="{Binding Unit.DisplayName}" />
                <GridViewColumn Header="Nhà cung cấp"
                                DisplayMemberBinding="{Binding Suplier.DisplayName}" />
                <GridViewColumn Header="QRCode"
                                DisplayMemberBinding="{Binding QRCode}" />
                <GridViewColumn Header="BarCode"
                                DisplayMemberBinding="{Binding BarCode}" />
              </GridView>
            </ListView.View>
          </ListView>
        </ScrollViewer>
      </materialDesign:Card>
    </Grid>
  </Grid>
</Window>
